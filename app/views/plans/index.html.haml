.header 
  .logo
    = link_to image_tag("logo1.png", class: "logo1"), "/"
  .menu
    %ul.menu_left
      %li= link_to 'Concepy', class: "menu_w"
      %li= link_to 'CreateAction', "/plans/new", class: "menu_s"
    - if user_signed_in?
      %ul.menu_left
        %li= link_to current_user.name, "#", class: "logout"
        %li= link_to 'log out', "/users/sign_out", method: :delete, class: "logout"
    - else
      %ul.menu_left
        %li= link_to 'log in', "/users/sign_in", class: "login"
        %li= link_to 'sign up', "/users/sign_up", class: "signup"
.mian-field
